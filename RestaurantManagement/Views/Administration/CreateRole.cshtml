@model CreateRoleViewModel




  @{
        ViewBag.Title = "Dream Cafe";
   }

<!--Create Role-->


 <section class="sec-padding roles">

        <div class="container">
            <div id="register">
                <div class="row">
                    <div class="section-title">
                        <h2 data-title="Role">Create New Role</h2>
                    </div>
                </div>



                <form  method="post">

                    <div class="form-group">
                        <label asp-for="RoleName">RoleName</label>
                        <input asp-for="RoleName" type="text" placeholder="RoleName" />
                        <span asp-validation-for="RoleName" class="text-danger fw-bold"></span>
                    </div>

                    

                    <div class="form-group">
                        <button type="submit" class="newbtn newbtn-default mt-3">Create Role</button>
                    </div>

                </form>
                



                <div class="mt-2">
                     <a asp-controller="Administration" asp-action="ListRoles" class="newbtn-default newbtn">Back to List</a>
                </div>


            </div>



        </div>

        

</section>
