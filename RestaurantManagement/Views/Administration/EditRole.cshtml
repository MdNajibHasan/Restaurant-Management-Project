@model EditRoleViewModel

@{
    ViewBag.Title = "Dream Cafe";
}


<section class="sec-padding roles">

        <div>
            
                <div class="row">
                    <div class="section-title">
                        <h2 data-title="All Roles">All Roles</h2>
                    </div>
                </div>
            
        </div> 


        <form method="post" class="mt-3">
            <div class="form-group row">
                <label asp-for="RoleId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="RoleId" disabled>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="RoleName">
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>


            <div asp-validation-summary="All" class="text-danger"></div>



            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="ListRoles" asp-controller="administration" class="btn btn-primary">Cancel</a>
                </div>
                
            </div>

        

            <div class="card mt-5">
                <div class="card-header">
                    <h3 class="text-black">Users in this role</h3>
                </div>
            

                <div class="card-body">
                @if (Model.Users.Any())
                {
                    @foreach (var user in Model.Users)
                    {
                        <h5 class="card-title text-black">@user</h5>
                    }
                }
                else
                {
                    <h5 class="card-title text-black" >None at the moment</h5>
                }
            </div>

                <div class="card-footer">
                    <a  class="btn btn-primary">Add Users</a>
                    <a  class="btn btn-primary">Remove Users</a>
                </div>
            </div>

        </form>

        


</section>