@model LoginViewModel


@{
        ViewBag.Title = "Dream Cafe";
 }




<section class="sec-padding  loginForm" >

        <div class="container">

            <div>
                <div class="row">
                    <div class="section-title">
                        <h2 data-title="login">Login</h2>
                    </div>
                </div>



                <form asp-controller="Account" asp-action="Login"  method="post">


                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Username">Username</label>
                        <input  asp-for="Username" type="text" placeholder="Username">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" type="password" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mt-2  form-check">
                      
                            <input class="form-check-input d-inline-block" type="checkbox" asp-for="RememberMe"  />
                            <label class="form-check-label d-inline-block"  asp-for="RememberMe">Remember Me</label>
                       
                    </div>

                    
                    
                    <div class="form-group">
                        <button type="submit" class="newbtn newbtn-default mt-3">Login</button>
                    </div>
                    
                    

                </form>




                <div class="mt-3">
                    Don't have an account?
                    <a asp-controller="Account" asp-action="SignUp" class="register-button newbtn">Sign Up</a>
                </div>





                <div class="mt-2">
                    <a asp-controller="Home" asp-action="Index" class="newbtn-default newbtn">Back to Home</a>
                </div>




            </div>



                  
            

        </div>
        

        

    </section> 