@model TableModel

@{
    ViewBag.Title = "Dream Cafe";
     var photopath = "~/Images/" + (Model.PhotoPath ?? "noimage.jpg");
}

<section class="sec-padding loginForm" >

        <div class="container">

            <div>
                <div class="row">
                    <div class="section-title">
                        <h2 data-title="Order Now">Breakfast Items</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="container2">




            <div class="cardItem2">
                            
                 <form method="post">
                        <input hidden asp-for="PhotoPath" />
                        <input hidden asp-for="TableNumber" />
                        <input hidden asp-for="TotalSeat" />
                        <input hidden asp-for="UserName" />
                        <input hidden asp-for="Id" />
                        <input hidden asp-for="IsSelected" />
                        
                        <img class="card-img-top imageThumbnail2" src="@photopath" asp-append-version="true"/>
                    

                       
                               
                                
                            
                             <div class="card-footer">
                                 <h4 class="menuDesign">Table Number : @Model.TableNumber</h4>
                                 <h4 class="menuDesign">Total Seat : @Model.TotalSeat</h4>
                                 <div class="row">
                                     <div class="col-sm">
                                         <label asp-for="Date">Select Date: </label>
                                         <input asp-for="Date" type="date" />
                                         <span asp-validation-for="Date"></span>
                                     </div>
                                     <div class="col-sm">
                                         <label asp-for="Time">Select Time: </label>
                                         <input asp-for="Time" type="time" />
                                         <span asp-validation-for="Time"></span>
                                     </div>
                                 </div>

                               
                        
                            <div class="container2">
                                    
                                        <button type="submit" class="newbtn newbtn-default">Confirm</button>
                                    
                            </div>
                       

                            </div>

                            </form>
                        </div>



        </div>

        <div class="container2">
                     <a asp-controller="Menu" asp-action="TableSelection" class="newbtn-default newbtn">Back</a>
        </div>

</section>